<Window x:Class="Lab4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab4"
        mc:Ignorable="d"
        Title="Users Table" Height="500" Width="900">

	<Grid Margin="0,0,0,0">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,30,0,60">
			<Button x:Name="AddUserButton" Content="Add" Height="40" Width="110" Margin="0,0,20,0" Background="#FF4DCC31" FontSize="18" FontWeight="Bold" Foreground="#ffff" Click="AddUserButton_Click"/>
			<Button x:Name="EditUserButton" Content="Edit" Height="40" Width="110" Margin="0,0,20,0" FontSize="18" FontWeight="Bold" Background="#FFE8E411" Foreground="#ffff"></Button>
			<Button x:Name="DeleteUserButton" Content="Delete" Height="40" Width="110" Margin="0,0,20,0" Background="#FFFA0F0F" FontSize="18" FontWeight="Bold" Foreground="#ffff"></Button>
		</StackPanel>

		<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,90,0,10">
			<TextBox x:Name="FilterTextBox" Width="200" Margin="0,0,10,0"/>
			<Button x:Name="FilterButton" Content="Filter" Width="100" Margin="0,0,10,0"/>
		</StackPanel>

		<DataGrid x:Name="UserDataGrid"
		  Grid.Row="1"
          AutoGenerateColumns="False"
          IsReadOnly="True"
          ItemsSource="{Binding Users}"
          SelectionMode="Single"
          Margin="0,0,0,10">
			<DataGrid.Columns>
				<DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="50"/>
				<DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
				<DataGridTextColumn Header="Surname" Binding="{Binding Surname}" Width="*"/>
				<DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
				<DataGridTextColumn Header="Date Of Birth" Binding="{Binding DateOfBirth}" Width="*"/>
				<DataGridTextColumn Header="Age" Binding="{Binding Age}" Width="50"/>
				<DataGridCheckBoxColumn Header="Is Adult" Binding="{Binding IsAdult}" Width="70"/>
				<DataGridTextColumn Header="Sun Sign" Binding="{Binding SunSign}" Width="100"/>
				<DataGridTextColumn Header="Chinese Sign" Binding="{Binding ChineseSign}" Width="100"/>
				<DataGridCheckBoxColumn Header="Is Birthday" Binding="{Binding IsBirthday}" Width="80"/>
			</DataGrid.Columns>
		</DataGrid>
	</Grid>
</Window>
