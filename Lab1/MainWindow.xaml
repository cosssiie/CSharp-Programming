<Window x:Class="Lab1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Lab1.ViewModels"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Date of birth" Width="410" Height="249">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    <Grid Background="{DynamicResource Theme_BackgroundBrush}" Width="410" Height="214">
        <TextBlock Text="Write down your date of birth" 
                   FontSize="16" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Top" 
                   Height="24" 
                   FontWeight="Bold" 
                   Width="232" 
                   TextAlignment="Justify" 
                   Margin="-2,32,0,0" />
        <TextBlock Text="{Binding WesternZodiac}"
                   FontSize="14"
                   Margin="29,74,0,0"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Left"
                   FontWeight="Bold"
                   Foreground="DarkBlue" />
        <TextBlock Text="{Binding ChineseZodiac}"
                   FontSize="14"
                   Margin="29,107,0,0"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Left"
                   FontWeight="Bold"
                   Foreground="#FFF27777" />
        <DatePicker SelectedDate="{Binding SelectedDate}"
                    HorizontalAlignment="Left" 
                    Width="208" 
                    VerticalAlignment="Top" 
                    Margin="29,141,0,0" 
                    Height="48" 
                    BorderBrush="Black" />
        <Button Content="Save"
                Command="{Binding ShowInfoCommand}"
                HorizontalAlignment="Left"
                Width="96"
                VerticalAlignment="Top"
                Margin="281,149,0,0"
                Height="32"
                FontSize="16"
                FontWeight="Bold"
                Foreground="White">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="#FFF27777"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontSize" Value="16"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </Style>
            </Button.Style>
        </Button>
    </Grid>
</Window>